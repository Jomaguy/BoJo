@{
    Institution institution = (Institution)ViewData["institution"];
}

<div class="card-body p-4">
    <div style="text-align:center;">
        <h2>@institution.name</h2>
        <p>@institution.city @institution.state</p>
        <a href="@institution.website_url" target="_blank">Website</a>
    </div>
    <h4>About</h4>
    <hr class="mt-0 mb-4">
    <div class="row pt-1">
        <div class="col-6 mb-3">
            <h6>@institution.level * @institution.control * @institution.size</h6>
            
            <h6>@institution.graduation_rate% graduation rate.</h6>
            <h6>$@institution.average_cost_after_aid average per year after aid.</h6>
            <h6>Average Accepted SAT score @institution.average_SAT</h6>
            <h6>Average Accepted ACT score @institution.average_ACT</h6>
            <h6>Ratio Student-Faculty: @institution.RatioStudentFaculty : 1.</h6>
            @if(institution.GraduateProgram==true){
                <h6>Graduate Program Available.</h6>
            }
            <br />
            <h6>Sport Overal Level: @institution.SportsOveralLevel</h6>
        </div>
    </div>
    <div class="row pt-1">
        <div style="width:80%;">
            <p>
               @institution.about 
            </p>
        </div>
    </div>
    <br />
    <hr style="height:5px;color:black;"/>
    <br />
    <h4>Admissions</h4>
    <hr class="mt-0 mb-4">
    <div class="row pt-1">
        <h6>Average Acceptance Rate: @institution.acceptance_rate%</h6>
        <h6> @institution.name is a @institution.Competitive competitive institution.</h6>

        <p class="text-muted"></p>
        <br />
        <h6>How to apply for @institution.name</h6>
        <a href=@institution.apply_url target="_blank">Online Application</a>
        <br />
    </div>
    <br />
    <h4>Contact Information</h4>
    <hr class="mt-0 mb-4">
    <div class="row pt-1">
        <div class="col-6 mb-3">
            <h6>Address</h6>
            <p class="text-muted">@institution.address, @institution.city, @institution.state @institution.zip</p>
            <h6>Tel:</h6>
            <a href="tel:@institution.tel_num"><p class="text-muted">(@institution.tel_num.Substring(0,3)) @institution.tel_num.Substring(3,3)-@institution.tel_num.Substring(6,4)</p></a>
        </div>
    </div>
    <h4>Similar Universities</h4>
    <hr class="mt-0 mb-4">
</div>

<div id="chatbox"></div>

@section Scripts {
    <script>
        $('#chatbox').load("/Chat/ChatRoom")
    </script>
}