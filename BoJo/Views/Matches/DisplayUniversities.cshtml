<h1>Safety Schools</h1>
<div class = "FirstDiv">
</div>

@for (var i = 0; i < (Model.Count())/3;i++)
{
    
    @if (Model[i].Size != 0)
    {
        <div class="card mb-3" style="max-width: 100%;cursor: pointer;" onclick="location.href='@Url.Action("Institution","Institutions", new { id = Model[i].UniversityNumber })';">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src = "data:image/jpeg;base64,@Model[i].picture" class="card-img" alt= "Image not Found">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <!--<a href=><h5 class="card-title">@Model[i].UniversityName</h5></a>-->
                        <h5 class="card-title">@Model[i].UniversityName</h5>
                        <p class="card-text">@Model[i].Overview</p>
                        <p class="card-text">School Size: @Model[i].Size</p>
                        <p class="card-text">Total Cost: $@Model[i].TuitonAndFees</p>
                        <p class="card-text">Percentage Match Preferences: @Model[i].preference_match_percent%</p>
                        <p class="card-text">Admission Match Percentage: @Model[i].admission_match_percent%</p>
                    </div>
                </div>
            </div>
        </div>
