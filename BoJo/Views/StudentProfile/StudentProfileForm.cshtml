@{
	ViewData["Title"] = "Student Profile Form";
	Layout = "~/Views/Shared/_Layout.cshtml";
	StudentProfile SP = (StudentProfile)ViewData["StudentProfile"];
	List<string> majors = (List<string>)ViewData["majorSelectList"];
	//string Competitive, string SportsOveralLevel, int MaxCostAfterAid, int RatioStudentFaculty
}
<head>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">

</head>
<H4 style="text-align:center">Student Profile</H4>
<body>
	<form action="@Url.Action("StudentProfileForm","StudentProfile")" method="post">
    <div style="width:100%;height:auto;display:flex;margin-bottom:50px">
        <div style="width:100%;margin:10px;">
			<h6>Study Preferences</h6>
			<hr class="mt-0 mb-4">
			<div class="row pt-1">
				<div class="col-6 mb-3">
					<h6>Program Type</h6>
					<input type="radio" id="undergraduate" value="Undergraduate" name="ProgramType" checked="checked">
					<label for="undergraduate">Undergraduate</label>

					<input type="radio" id="graduate" value="Graduate" name="ProgramType" @(SP.ProgramType=="Graduate" ? "checked='checked'":"")>
 					<label for="graduate">Graduate</label>
				</div>
				<div class="col-6 mb-3">
					<h6>Major Preference</h6>
					<select name="Major" >
						<option selected>Undecided</option>
						@foreach(string m in majors)
						{
							<!option @(@SP.Major==@m ? "selected" : "")>
								@m
							</!option>
						}
					</select>
				</div>
			</div>
			<br />
			<div class="row pt-1">
				<div class="col-6 mb-3">
					<h6>School Type</h6>
					<input type="radio" id="Any" value="Any" name="control" checked="checked">
					<label for="Any">Any</label>

					<input type="radio" id="Private" value="Private" name="control" @(SP.control=="Private" ? "checked='checked'":"")>
 					<label for="Private">Private</label>

					<input type="radio" id="Public" value="Public" name="control" @(SP.control=="Public" ? "checked='checked'":"")>
					<label for="Public">Public</label>
				</div>
				<div class="col-6 mb-3">
					<h6>Minor</h6>
					<select name="minor" >
						<option selected>Undecided</option>
						@foreach(string m in majors)
						{
							<!option @(@SP.minor==@m ? "selected" : "")>
								@m
							</!option>
						}
					</select>
				</div>
			</div>
			<h6>School Preferences</h6>
			<hr class="mt-0 mb-4">
			<div class="row pt-1">
				<div class="col-6 mb-3">
					<h6>Location</h6>
					<select name="Location"> 
						<!option value="Any" selected>Any</!option>
						<!option value="West" @(SP.Location=="West" ? "selected" : "")>West</!option>
						<!option value="Mid-West" @(SP.Location=="Mid-West" ? "selected" : "")>Mid-West</!option>
						<!option value="South-West" @(SP.Location=="South-West" ? "selected" : "")>South-West</!option>
						<!option value="South-East" @(SP.Location=="South-East" ? "selected" : "")>South-East</!option>
						<!option value="North-East" @(SP.Location=="North-East" ? "selected" : "")>North-East</!option>
					</select>
				</div>
				<div class="col-6 mb-3">
					<h6>School Size</h6>
					<select name="School_Size"> 
						<!option value="100000" selected>Any</!option>
						<!option value="2000" @(@SP.School_Size==2000 ? "selected" : "")> &lt; 2000</!option>
						<!option value="5000" @(@SP.School_Size==5000 ? "selected" : "")>&lt; 5000</!option>
						<!option value="10000" @(@SP.School_Size==10000 ? "selected" : "")>&lt; 10000</!option>
						<!option value="15000" @(@SP.School_Size==15000 ? "selected" : "")>&lt; 15000</!option>
					</select>
				</div>
			</div>
			<br />
			<div class="row pt-1">
				<div class="col-6 mb-3">
					<h6>Dorming Percentage</h6>
					<select name="dorming_percentage"> 
						<!option value="100" selected>Any</!option>
						<!option value="25" @(@SP.dorming_percentage==25 ? "selected" : "")> &lt; 25%</!option>
						<!option value="50" @(@SP.dorming_percentage==50 ? "selected" : "")>&lt; 50%</!option>
						<!option value="75" @(@SP.dorming_percentage==75 ? "selected" : "")>&lt; 75%</!option>
					</select>
				</div>
				<div class="col-6 mb-3">
					<h6>Climate</h6>
					<select name="climate"> 
						<!option value="Any" selected>Any</!option>
						<!option value="Arctic" @(@SP.climate=="Arctic" ? "selected" : "")> Arctic</!option>
						<!option value="Subarctic" @(@SP.climate=="Subarctic" ? "selected" : "")>Subarctic</!option>
						<!option value="Subtropical" @(@SP.climate=="Subtropical" ? "selected" : "")>Subtropical</!option>
						<!option value="Humid Subtropical" @(@SP.climate=="Humid Subtropical" ? "selected" : "")>Humid Subtropical</!option>
						<!option value="Mediterranean" @(@SP.climate=="Mediterranean" ? "selected" : "")>Mediterranean</!option>
						<!option value="Subtropical" @(@SP.climate=="Subtropical" ? "selected" : "")>Subtropical</!option>
						<!option value="Desert" @(@SP.climate=="Desert" ? "selected" : "")>Desert</!option>
						<!option value="Highland" @(@SP.climate=="Highland" ? "selected" : "")>Highland</!option>
						<!option value="Tropical" @(@SP.climate=="Tropical" ? "selected" : "")>Tropical</!option>
					</select>
				</div>
			</div>
			<br />
			<div class="row pt-1">
				<div class="col-6 mb-3">
					<h6>Competitive Level</h6>
					<select name="Competitive"> 
						<!option value="Any" selected>Any</!option>
						<!option value="Extremely" @(@SP.Competitive=="Extremely" ? "selected" : "")>Extremely</!option>
						<!option value="Moderately" @(@SP.Competitive=="Moderately" ? "selected" : "")>Moderately</!option>
						<!option value="Lightly" @(@SP.Competitive=="Lightly" ? "selected" : "")>Lightly</!option>
					</select>
				</div>
				<div class="col-6 mb-3">
					<h6>Sports Overall Level</h6>
					<select name="SportsOveralLevel"> 
						<!option value="Any" selected>Any</!option>
						<!option value="High" @(@SP.SportsOveralLevel=="High" ? "selected" : "")>High</!option>
						<!option value="Medium" @(@SP.SportsOveralLevel=="Medium" ? "selected" : "")>Medium</!option>
						<!option value="Low" @(@SP.SportsOveralLevel=="Low" ? "selected" : "")>Low</!option>
					</select>
				</div>
			</div>
			<br />
			<div class="row pt-1">
				<div class="col-6 mb-3">
					<h6>Max Cost After Aid</h6>
					<select name="MaxCostAfterAid"> 
						<!option value="0" selected>Any</!option>
						<!option value="5000" @(@SP.MaxCostAfterAid==5000 ? "selected" : "")>5000</!option>
						<!option value="10000" @(@SP.MaxCostAfterAid==10000 ? "selected" : "")>10000</!option>
						<!option value="20000" @(@SP.MaxCostAfterAid==20000 ? "selected" : "")>20000</!option>
						<!option value="30000" @(@SP.MaxCostAfterAid==30000 ? "selected" : "")>30000</!option>
					</select>
					<br />
				</div>
				<div class="col-6 mb-3">
					<h6>Ratio Student:Faculty</h6>
					<select name="RatioStudentFaculty"> 
						<!option value="0" selected>Any</!option>
						<!option value="5" @(@SP.RatioStudentFaculty==5 ? "selected" : "")>5:1</!option>
						<!option value="10" @(@SP.RatioStudentFaculty==10 ? "selected" : "")>10:1</!option>
						<!option value="15" @(@SP.RatioStudentFaculty==15 ? "selected" : "")>15:1</!option>
						<!option value="20" @(@SP.RatioStudentFaculty==20 ? "selected" : "")>20:1</!option>
						<!option value="25" @(@SP.RatioStudentFaculty==25 ? "selected" : "")>25:1</!option>
						<!option value="30" @(@SP.RatioStudentFaculty==30 ? "selected" : "")>30:1</!option>
						<!option value="50" @(@SP.RatioStudentFaculty==35 ? "selected" : "")>35:1</!option>
					</select>
				</div>
			</div>
			<br />
			<div class="row pt-1">
				<div class="col-6 mb-3">
					<h6>Greek Life</h6>
					<input type="radio" id="Any" value="Any" name="greek_life" checked="checked">
					<label for="Any">Any</label>

					<input type="radio" id="Yes" value="Yes" name="greek_life" @(SP.greek_life=="Yes" ? "checked='checked'":"")>
 					<label for="Yes">Yes</label>

					<input type="radio" id="No" value="No" name="greek_life" @(SP.greek_life=="No" ? "checked='checked'":"")>
					<label for="No">No</label>
				</div>
			</div>
			<h6>Test Score</h6>
			<hr class="mt-0 mb-4">
			<div class="row pt-1">
				<div class="col-6 mb-3">
					<h6>ACT</h6>
					<input type="number" name="ACT_Score" class="form-control input_user" min="0" max="36" placeholder="36" required
						@if(@SP.ACT_Score!=0){
							<text>value=@SP.ACT_Score</text>
						}
					/>
				</div>
				<div class="col-6 mb-3">
					<h6>SAT</h6>
					<input type="number" name="SAT_Score" class="form-control input_user" placeholder="1600" min="0" max="1600" required
						@if(@SP.SAT_Score!=0){
							<text>value=@SP.SAT_Score</text>
						} 
					/>
				</div>
				<div class="col-6 mb-3">
					<h6>GPA</h6>
					<input type="number" step="0.01" name="GPA" class="form-control input_user" placeholder="4.00" min="0" required  
						@if(@SP.GPA!=0){
							<text>value=@SP.GPA</text>
						}
					/>
				</div>
				<div class="col-6 mb-3">
					<h6>GPA out of</h6>
					<input type="number" step="0.01" name="GPA_outof" class="form-control input_user" min="0" placeholder="4.00" required
						@if(@SP.GPA_outof!=0){
							<text>value=@SP.GPA_outof</text>
						}
					/>
				</div>
			</div>
			<hr class="mt-0 mb-4">
			<div class="row pt-1">
				<button type="submit" name="button" class="btn btn-primary">Submit</button>
				<br />
				<h2>@ViewData["Message"]</h2>
			</div>
        </div>
    </div>
	</form>
</body>